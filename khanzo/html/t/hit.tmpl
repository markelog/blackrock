{{ $m := .Metadata }}
{{ $maker := .ForeignId }}
<tr>
  <td colspan=2>
    <a href="/scan/haml/type:{{ $m.Type }}">{{$m.Type }}</a><br>
    <a href="/scan/haml/foreign_id:{{ .ForeignId }}">{{.ForeignId}}</a><br>
    {{ time $m.CreatedAtNs }}<br>
  </td>
</tr>

{{ range $m.Tags }}
<tr>
  <td class="left">
    {{ .Key }}
  </td>
  <td class="right">
    <a href="/scan/html/foreign_id:{{$maker}}/{{ .Key }}:{{ .Value}}">{{.Value}}</a>
  </td>
</tr>
{{ end }}


{{ range $m.Properties }}
<tr>
  <td class="left">
      {{ .Key }}
  </td>
  <td class="right">
      {{.Value}}
  </td>
</tr>
{{ end }}

<tr>
<td colspan=2 class="hit-sep">&nbsp;</td>
</tr>
